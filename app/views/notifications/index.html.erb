<div class="well" >

       <% @notifications.each do |notice| %>

       <% cache notice do %>

         <div class="page_wrapper">

           <div style="border-bottom: 1px solid lightgrey; padding-bottom: 0.5em">

                <h4 style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; color: black; font-weight: bold;"><%= notice.visitor.user.name  %></h4>

                <h4 style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; color: black; font-weight: bold;">Host:-<%= notice.party.user.name %> Sents you an I.V </h4>

                
          	   	
          	   	<h4 style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; color: black; font-weight: bold;">to the occassion - (<%= notice.party.title  %>)</h4>

                <% if @visitor == notice.visitor %>



                <div class="btn btn-danger"><%= link_to "Accept", visitor_path(@visitor), :style =>"font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: black" %></div>

                <% end %>

             
          	   
      	   	 
         </div>
     	
    <% end %>


    <% end %>

 
<br>  

</div>

 


