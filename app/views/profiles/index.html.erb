<div id="page_wrapper">

    <div class="container">

      <div class="row">

        

            <div class="col-xs-6">


             <div class="skill">

                  <h2 style="font-family: 'Julius Sans One', sans-serif; font-size: 24px; font-weight: bold; color: #00193a;">My memorable Occasions</h2>
                  <div style="font-family: 'Montserrat', cursive; font-size: 18px; color: black">This is your one stop Occasion Diary, Load your occasion and manage it has never been done before. Couple of clicks and Bam!, you are having shed-load of fun.</div>

                 </div>   <br /><br />

                  <div align="center"><%= link_to "All Occasions", parties_path, :type => "button", :class => "btn btn-default", :style => "font-family: 'Karma', sans-serif; font-size: 22px; color: #2c0138; font-weight: bold;" %></div>
                 <br /><br />

                 <h2 style="font-family: 'Julius Sans One', sans-serif; font-size: 24px; font-weight: bold; color: #00193a;">Search for Friends and Family </h2>


                 <%= search_form_for @q do |f| %>
                 <div class="search-people">
                  <form> 
                     
                       <%= f.search_field :name_cont, :placeholder => "Who are you looking for?", :required => true %>
                   
                    <button type="submit" value="Submit"><i class="fa fa-search" aria-hidden="true"></i></button>

                    
                  </form>
                </div>

                <% end %> 




                
            </div><!--/.col-sm-6-->


            

        <div class="col-xs-6">

                <h2 align="center" style="font-family: 'Averia+Serif+Libre', serif; font-size: 30px;"></h2>

                  <% @profile.user.parties.sorted.each_with_index do |party, index| %>

                  <% break if index == 5 %>


                

              <div class="accordion">
                       <div class="panel-group" id="accordion1">

                                  <div class="panel panel-default">

                                      <div class="panel-heading active">

       <h3 class="panel-title">

                                                                
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index.to_s %>"  aria-expanded="true" aria-controls="collapseOne" style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: white; font-weight: bold; ">
                                                                  <%= party.title %>
              <i class="fa fa-angle-right pull-right"></i>
          
           </a>
        
        </h3>

                                                  </div>

                    <div id="collapse<%= index.to_s %>" class="panel-collapse collapse">


                       <div class="panel-body">

                         <div class="media accordion-inner">

                            <div class="pull-left">
                                    
                            <%= image_tag(party.picture.url(:original), :width => "80", :height => "80") %>

                         </div>

                         <div class="media-body">
                                                                  
                          <p><i class="fa fa-envelope fa-2x" aria-hidden="true" style="color: #00193a;"></i>&nbsp;<%= link_to("Invite Guests", party_path(party), :style => "font-family: 'Julius Sans One', sans-serif; font-size: 12px; font-weight: bold; color: #00193a;") %><br>
                            
                            <i class="fa fa-picture-o fa-2x" aria-hidden="true" style="color: #00193a;"></i>
              &nbsp;<%= link_to("Upload Album", {:controller => 'catalogues', :party_id => party.id, :title => party.title}, :class => 'action index', :style => "font-family: 'Julius Sans One', sans-serif; font-size: 12px; font-weight: bold; color: #00193a;") %></p>

            


               
                                                                </div>

                                                           </div>

                                                    </div>

                                          </div>


                                    </div>  

                                </div>          


                        </div><!--/#accordion1-->


                   
                 
                     <% end %>


                </div>


            </div><!--/.row-->


            </div>


            <br /><br />


                
                 


    </div>




