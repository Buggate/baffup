<div id="page_wrapper">
  
  <section id="middle">

    <div class="container">

      <div class="row">

            <div class="col-sm-6">

                 <div class="skill">


                  <h2 style="font-family: 'Courgette', serif; font-size: 38px; font-weight: bold; color: red">Load your memorable Occassion</h2>
                  <p style="font-family: 'Oswald', serif; font-size: 22px; font-weight: italic; color: green">This is your one stop Occassion Diary, Load your occassion and manage it has never been done before. Couple of clicks and Bam!, you are having shed load of fun.</p>

                 </div>   

            </div><!--/.col-sm-6-->

        <div class="col-sm-6">

                  <h2 align="center" style="font-family: 'Averia+Serif+Libre', serif; font-size: 40px;">My Occassions</h2>

                  <% @profile.user.parties.sorted.each_with_index do |party, index| %>

                  <% break if index == 5 %>

              <div class="accordion">
                   <div class="panel-group" id="accordion1">

                        <div class="panel panel-default">

                                  <div class="panel-heading active">

                                             <h3 class="panel-title">
                                                  <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index.to_s %>"  aria-expanded="true" aria-controls="collapseOne" style="font-family: 'Handlee', serif; font-size: 23px; font-weight: bold; color: black">
                                                    <%= party.title %>
                                                    <i class="fa fa-angle-right pull-right"></i>
                                                  </a>
                                                </h3>

                                    </div>

                            <div id="collapse<%= index.to_s %>" class="panel-collapse collapse">


                                  <div class="panel-body">

                                          <div class="media accordion-inner">

                                                  <div class="pull-left">
                                                      <%= image_tag(party.picture.url(:large), :width => "80", :height => "80") %>

                                                  </div>

                                                  <div class="media-body">
                                                    <p><i><img src="/envelop.png", width="30" height="30" alt=""></i>&nbsp;<%= link_to("Invite Guests", party_path(party), :style => "font-family: 'Handlee', serif; font-size: 18px; font-weight: bold;") %><br>
                                                    <i class="fa fa-picture-o" aria-hidden="true"></i>
&nbsp;<%= link_to("Upload Album", catalogues_path(:party_id => party.id),:style => "font-family: 'Handlee', serif; font-size: 18px; font-weight: bold;" )%></p>
                                                  </div>

                                            </div>

                                  </div>

                            </div>


                          </div>            


                        </div><!--/#accordion1-->


                    </div>

                    <% end %>


                </div>


                <%= link_to "All Occassions", parties_path(:user_id => @profile.user.id), :style => "font-family: 'Handlee', serif; font-size: 23px; font-weight: bold; color: black" %>


                

            </div><!--/.row-->


            </div>




            </section>

            </div>
