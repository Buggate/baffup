<div id="page_wrapper">

    <div class="container">

      <div class="row">

            <div class="col-xs-4">

                 <div class="skill">

                  <h2 style="font-family: 'Julius Sans One', sans-serif; font-size: 24px; font-weight: bold; color: red">My memorable Occassions</h2>
                  <div style="font-family: 'Annie Use Your Telescope', cursive; font-size: 18px; font-weight: bold;color: black">This is your one stop Occassion Diary, Load your occassion and manage it has never been done before. Couple of clicks and Bam!, you are having shed-load of fun.</div>

                 </div>   <br /><br />

                 <div align="center"><%= link_to "All Occassions", parties_path, :type => "button", :class => "btn btn-danger", :style => "font-family: 'Mogra', cursive; font-size: 18px; color: black" %></div>


                
            </div><!--/.col-sm-6-->

        <div class="col-xs-5">

                <h2 align="center" style="font-family: 'Averia+Serif+Libre', serif; font-size: 30px;"></h2>

                  <% @profile.user.parties.sorted.each_with_index do |party, index| %>

                  <% break if index == 5 %>


                  <% cache party do %>

              <div class="accordion">
                       <div class="panel-group" id="accordion1">

                                  <div class="panel panel-default">

                                      <div class="panel-heading active">

       <h3 class="panel-title">

                                                                
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index.to_s %>"  aria-expanded="true" aria-controls="collapseOne" style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: black; font-weight: bold; ">
                                                                  <%= party.title %>
              <i class="fa fa-angle-right pull-right"></i>
          
           </a>
        
        </h3>

                                                  </div>

                    <div id="collapse<%= index.to_s %>" class="panel-collapse collapse">


                       <div class="panel-body">

                         <div class="media accordion-inner">

                            <div class="pull-left">
                                    
                            <%= image_tag(party.picture.url(:large), :width => "80", :height => "80") %>

                         </div>

                         <div class="media-body">
                                                                  
                          <p><i><img src="/envelop.png", width="30" height="30" alt=""></i>&nbsp;<%= link_to("Invite Guests", party_path(party), :style => "font-family: 'Julius Sans One', sans-serif; font-size: 12px; font-weight: bold;") %><br>
                            
                            <i class="fa fa-picture-o fa-2x" aria-hidden="true"></i>
              &nbsp;<%= link_to("Upload Album", {:controller => 'catalogues', :party_id => party.id, :title => party.title}, :class => 'action index', :style => "font-family: 'Julius Sans One', sans-serif; font-size: 12px; font-weight: bold;") %></p>

            


               
                                                                </div>

                                                           </div>

                                                    </div>

                                          </div>


                                    </div>  

                                </div>          


                        </div><!--/#accordion1-->


                   
                    <% end %>

                     <% end %>


                </div>


                

            </div><!--/.row-->


            </div>


    </div>




