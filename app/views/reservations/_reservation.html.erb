 <% modal ||= false %>
   <% remote = modal ? true : false %>

 <div class="container" id="team" name="team">

      <h1 class="centered" style="font-family: 'Montserrat'', sans-serif; font-size: 18px; font-weight: bold; ">Guest Reservation Lists</h1>
    <br>
      <div class="row white centered">

        
           <% cache reservation, remote: remote, html: {role: :index, 'data-model' => 'reservation'} do %>
       
        <div class="col-xs-4 centered">

          <%= image_tag(reservation.visitor.user.profile.image.url(:large), :class => "img-circle", :alt => "") %>
         
          <br>
          <h4 style="font-family: 'Montserrat'', sans-serif; font-size: 16px; color: 915b05;"><%= reservation.name %></h4>
          <a href="https://www.facebook.com/"><i class="fa fa-twitter" aria-hidden="true"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <a href="https://twitter.com"><i class="fa fa-facebook" aria-hidden="true"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <a href="https://plus.google.com/"><i class="fa fa-google-plus" aria-hidden="true"></i></a><br /><br />
          <p style="font-family: 'Montserrat'', cursive; font-size: 16px; color: #00193a; font-weight: bold;">said: <%= human_boolean(reservation.accept) %></p>
        </div><!-- col-lg-3 -->

        <% end %>

           
      </div><!-- row -->

    </div><!-- container -->

