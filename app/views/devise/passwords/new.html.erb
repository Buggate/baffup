
 <div class="login-wrap">
  <div class="login-html">
    
    <div class="login-form">

           <div class="login-options" ><img src="/b_logo1.png" width="120" height="100" border="5" ></div>
             
        <div class="login-options" align="center" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; "><%= t('.forgot_your_password', :default => 'Forgot your password?') %></div><br /><br /><br />

            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>

        <div class="group">

              <label for="user-email" class="label" style="font-size: 18px;">Email</label><br />

              <%= f.email_field :email, autofocus: true, class: "input" %>

        </div><br />

         <div class="group" align="center">
            
            <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary", :style => "font-family: 'Mogra',  cursive; font-size: 18px;"  %>

          </div>

        <% end %>
        <br />

                 
        

</div>

 </div>

  </div>
