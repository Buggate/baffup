
  <%= form_for([@party, @comment, @party.comments.build]) do |f| %>

    <p>

   <%= f.hidden_field :party_id, :value => @party.id %>

   </p>

   
   <p>

   <div class="well">
     <h4>Leave a Comment:</h4>
        <form role="form">
                
           <div class="form-group">

            <%= f.hidden_field :name, :value => current_user.name %> 


                <a class="pull-left" href="#">
                   <%= image_tag(current_user.profile.image.url(:thumb), :class => "media-object") %>
                </a>

               <%= f.text_area :body %>
            </div>

            <div class="form-group">
              <%= f.submit %>
           </div>



    </form>
  </div>
   


<% end %>


                   