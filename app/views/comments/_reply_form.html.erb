<% modal ||= false %>
   <% remote = modal ? true : false %>

      <%= form_for([@visitor, @comment, @visitor.comments.build], remote: remote, html: {role: :form, 'data-model' => 'comment'})  do |f| %>

  <p>

     <%= f.hidden_field :visitor_id, :value => @visitor.id %>

     <%= f.hidden_field :party_id, :value => @visitor.party.id %>

     <%= f.hidden_field :parent_id, :value => @parent.id %>

   </p>

  
  <div class="well">
     <h4>Leave a Comment:</h4>
        <form role="form">
                
           <div class="form-group">

            <%= f.hidden_field :name, :value => @visitor.user.name %> 


                <a class="pull-left" href="#">
                   <%= image_tag(@visitor.user.profile.image.url(:thumb), :class => "media-object") %>
                </a>

               <%= f.text_area :body %>
            </div>

            <div class="form-group">
              <%= f.submit %>
           </div>



    </form>

</div>



<% end %>

