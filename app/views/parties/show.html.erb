<div id="page_wrapper">
  <div class="container">
    


    <section id="features">
      <div style="font-family: 'Julius Sans One', sans-serif; font-size: 18px";>

            <div >
                <h2 align="center">Your Guests Awaits</h2>

            <p style="font-family: 'Annie Use Your Telescope', cursive; font-size: 22px; color: black; font-weight: bold;" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Welcome!!! Get your guests list out. All you need is their correct and working email.<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Otherwise check your existing friends list to send a request </p>
 
           </div>            
         <div class="row">

         <div class="col-sm-3 wow fadeInLeft">

         </div>
            
            <div class="col-sm-3 wow fadeInLeft">

            <a href="" class="btn btn-primary" data-toggle="modal" data-target="#new_request_modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 16px; color: black;">Friends Request</a>

                <div class="modal fade" id="new_request_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="overflow: auto;">    

                 

                  <div class="modal-dialog">  

                      <div class="modal-content">

                        <div class="modal-header">

                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                 

                             <h4 class="modal-title" id="myModalLabel" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 16px; color: black; font-weight: bold;">Friend Request</h4>
                                                          
                        </div>
                                                
                      <div class="modal-body" style="background-color: #e5f4f9; width: 100%; height: 100%; overflow: auto;">
                                                                <%# Render the new person form (passing modal => true to enable remote => true) %>
                         <%= render 'requests/form', modal: true %> 

                                  <div class="modal-footer">

                                     <button type="button" class="btn btn-default" data-dismiss="modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 12px; color: black; font-weight: bold;">Close</button>

                    


                              </div>
                                              
                         </div>

                       </div>
                                
                  </div>
                          
            </div>
        

    
            </div>

                <br />
            <div class="col-sm-3">

            <a href="" class="btn btn-primary" data-toggle="modal" data-target="#index_reservations_modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 16px; color: black; font-weight: bold;">R S V P Lists</a>

      <div class="modal fade" id="index_reservations_modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">    

 

          <div class="modal-dialog">  

                   <div class="modal-content">

                        <div class="modal-header" >

                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                 

                             <h4 class="modal-title" id="myModalLabel" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 16px; color: black; font-weight: bold;">Reservation Lists</h4>
                                                          
                        </div>
                                                
                      <div class="modal-body" style="background-color: #e5f4f9; width: 100%; height: 100%; overflow: auto;">
                                                                <%# Render the new person form (passing modal => true to enable remote => true) %>
                         <%= render @party.reservations, modal: true %> 

                                  <div class="modal-footer">

                                     <button type="button" class="btn btn-default" data-dismiss="modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 16px; color: black; font-weight: bold;">Close</button>

                    


                              </div>
                                              
                         </div>

                  </div>
                              
            </div>
                          
      </div>





            </div>


            
        </div>

        
    </section>

