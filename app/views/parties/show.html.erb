<div id="page_wrapper">

    <div class="container">

		<% if @party != current_user.parties.first %>


        

		 

<section id="features">
        <div class="container" style="font-family: 'Julius Sans One', sans-serif; font-size: 18px";>
            <div class="section-header">
                <h2 class="section-title text-center wow fadeInDown">Occassion Details</h2>
            <p class="text-center wow fadeInDown" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 22px; color: black; font-weight: bold;" >These are the full details of your planned occassion as completed by you.<br /> Monitor changes to the details from here.</p>


            </div>
            <div class="row">
                <div class="col-sm-6 wow fadeInLeft">
                                
            <% if @party.category != nil %>

               <% case #{"@party.category"} %>

                <%  when "parties" %>

                          <img class="img-responsive" src="/new_back7.jpg", width="200" height="200" alt="">

                  <%  when "get_together" %>

                           <img class="img-responsive" src="/occa1.jpeg", width="200" height="200" alt="">

                  <%  when "events" %>

                         <img class="img-responsive" src="/new_back7.jpg", width="200" height="200" alt="">

                   <% when "ceremonies" %>

                          <img class="img-responsive" src="/occa1.jpeg", width="200" height="200" alt="">

                   <% else %>

                          <img class="img-responsive" src="/occa1.jpeg", width="200" height="200" alt="">

                    <% end %>

               <% end %>
                    
                </div>
                <div class="col-sm-6">
                    <div class="media service-box wow fadeInRight">
                        <div class="pull-left">
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading" >Date &amp; Time</h4>
                            <p style="font-family: 'Julius Sans One', sans-serif; font-size: 16px">This Occasion is scheduled for the &nbsp;<strong style="color: red"><%= localize(@party.created_at, format: :long) %></strong></p>
                        </div>
                     
                    </div>

                    <div class="media service-box wow fadeInRight">
                        <div class="pull-left">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Occassion Venue</h4>
                            <p style="font-family: 'Julius Sans One', sans-serif; font-size: 16px">It is going to be held at the <br /><strong style="color: red"><%= @party.venue %></p></strong>
                        </div>
                    </div>

                    <div class="media service-box wow fadeInRight">
                        <div class="pull-left">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Guest RSVP BY</h4>
                            <p style="font-family: 'Julius Sans One', sans-serif; font-size: 18px">Expecting all RSVP back by the <br /><strong style="color: red"><%= localize(@party.rsvp_by, format: :long) %></p></strong>
                        </div>
                    </div>

                      <a href="" class="btn btn-primary" data-toggle="modal" data-target="#new_request_modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 18px; color: black; font-weight: bold;">Friends Request</a>

	    <div class="modal fade" id="new_request_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">      

			    <div class="modal-dialog">  

				           <div class="modal-content">

											  <div class="modal-header" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 22px; color: red">

											    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                 

											       <h4 class="modal-title" id="myModalLabel">Friend Request</h4>
											                                    
											  </div>
				                                        
								      <div class="modal-body">
								                                                <%# Render the new person form (passing modal => true to enable remote => true) %>
									       <%= render 'requests/form', modal: true %> 

									                <div class="modal-footer" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 22px; color: red">

									                   <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      														


											        </div>
								                              
						             </div>

				          </div>
		                          
		        </div>
	                        
	    </div>

                  </div>
            </div>
        </div>
    </section>
<br />

<br />
<%= render 'invites/form' %><br />
<br/>



