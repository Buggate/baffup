
 <div id="page_wrapper">

 <% modal ||= false %>
   <% remote = modal ? true : false %>
 
   <%= form_for([current_user.parties.build], remote: remote, html: {role: :form, 'data-model' => 'party'}) do |f| %>

   <p>
    
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
  </p>
  

  <div class="form-group">
    <%= f.label(:your_party_picture) %>
    <%= f.file_field :picture %>
  </div>

  <div class="form-group">
    <%= f.label(:title) %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label(:party_venue) %><br />
    <%= f.text_field :venue, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label(:date) %><br />
    <%= f.date_field :date, autofocus: true, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.submit %>   
  </div>

<% end %>