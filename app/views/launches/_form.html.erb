<%= simple_form_for([@operator, @launch, @operator.launches.build({:operator_id => @operator.id})]) do |f| %>

         
        <p>
           
            <%= f.hidden_field(:operator_id, :value => @operator.id) %>
        </p>

       


        <div class="form-group">

           <div><label for="invite-emails"><span style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; font-weight:  bold; color: #00193a;">Launch Invitation</span></label></div>
           <br />

   <label for="user-email" class="label" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; color: #00193a;" >Type Email</label><br /><br />
        <%= f.input :email, label: false, :placeholder => "guest_one@example.com, guest_two@example.com, etc" %>


</div><br>

   <%= button_tag(type: 'submit', class: "btn btn-primary", :style => "font-family: 'Montserrat', sans-serif; font-size: 16px; color: #00193a; ") do %>
