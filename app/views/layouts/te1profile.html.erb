   <header id="header">

    <div class="inner">

       <a href="#" class="image avatar"><%= image_tag(@profile.image.url(:original)) %></a>
       <div class="actions">
        <%= link_to "Update Picture", edit_picture_profiles_path(@profile), :type => "button", :class => "btn btn-primary", :style => "font-family: 'Montserrat', sans-serif; font-size: 12px; color: #00193a; font-weight: bold;"  %>
        
       
      </div><br />

      <% if @profile.username != nil %>

         <p style="color: #00193a;"><i class="fa fa-user fa-fw fa-2x"></i>&nbsp;&nbsp;<strong style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: #915b05; font-weight: bold;"><%= @profile.username %></strong></p>

      <% else %>

         <p style="font-size: 12px; color: #00193a; font-weight: bold;"><i class="fa fa-user fa-fw fa-2x"></i>&nbsp;&nbsp;<strong style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: #915b05; font-weight: bold;"><%= @profile.name %></strong></p>

      <% end %>
   
                     

    <div class="media-body">
      
       <p style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: #560142; font-weight: bold;"><%= @profile.address_city %><br /><%= @profile.address_state %></p>
                  
     </div>

    
      <div class="media-body">
     
      
