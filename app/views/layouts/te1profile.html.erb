   <header id="header">

    <div class="inner">

       <a href="#" class="image avatar"><%= image_tag(@profile.image.url(:large), cached: true ) %></a>
       <div class="actions">
        <%= link_to "Update Picture", edit_picture_profiles_path(@profile), :type => "button", :class => "btn btn-primary", :style => "font-family: 'Montserrat', sans-serif; font-size: 12px; color: #00193a; font-weight: bold;"  %>
        
       
      </div><br />

      <% if @profile.username != nil %>

      <p style="color: #00193a;"><i class="fa fa-user fa-fw fa-2x"></i>&nbsp;&nbsp;<strong style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: #915b05; font-weight: bold;"><%= @profile.username %></strong></p>

         <% else %>

       <p style="font-size: 12px; color: #00193a; font-weight: bold;"><i class="fa fa-user fa-fw fa-2x"></i>&nbsp;&nbsp;<strong style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: #915b05; font-weight: bold;"><%= @profile.name %></strong></p>

        <% end %>


  <div class="dropdown">
                                      
  <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" type="button" style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: #00193a; "><i class="fa fa-cog" aria-hidden="true"></i>&nbsp;&nbsp;Profile Settings&nbsp;&nbsp;<i class="fa fa-angle-right" aria-hidden="true"></i></i></a>

   <ul class="dropdown-menu">

                  
        <li><%= link_to "" %></li>



      <li><%= link_to "Edit_Profile", edit_profile_path(@profile), :type => "button", :class => "btn btn-default", :style => "font-family: 'Montserrat', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;" %></li>

        <li><%= link_to "" %></li>


      <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', :type => "button", :class => "btn btn-default", :style => "font-family: 'Montserrat', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;"  %></li>
                  

    </ul>
                   

  </div>
  


    
<aside>
           
                             
    <div class="media-body">

      <p style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;">My Email <br /><strong style="font-family: 'Montserrat', sans-serif; font-size: 12px; sans-serif; color: #915b05; font-weight: bold; "><%= @profile.email %></strong></p>
      
      </div>

     
                     

    <div class="media-body">
      
       <p style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;">City/Town<br /><strong style="font-family: 'Montserrat', sans-serif; font-size: 12px; sans-serif; color: #915b05; font-weight: bold;"><%= @profile.city %></strong></p>
                  
     </div>

    
      <div class="media-body">
     
      
      <p style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;">Phone/Mobile<br /><strong style="font-family: 'Montserrat', sans-serif; color: #915b05; font-weight: bold; font-size: 12px;"><%= @profile.mobile %></strong></p>
      
      </div>
       <div class="media-body">
     
      
      <p style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;">Hobbies<br /><strong style="font-family: 'Montserrat', sans-serif; color: #915b05; font-weight: bold; font-size: 12px;"><%= @profile.hobbies %></strong></p>
      
      </div>


    
     <img src="/b_logo1.png" width="120" height="100" border="5" >

      <p style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; color: #00193a; font-weight: bold;">&copy; Baffsup 2017</p>

    </aside>

   </div>


  </header>
     

  <!-- Main -->
 <div id="main">

  <section id="one">

    <div class="major">

     <h2 style="font-family: 'Julius Sans One', sans-serif; font-size: 20px; font-weight: bold; color: #00193a;">Create and manage your occasions. Keep records of your most important moments and share with your loved ones.<br />Its easy and free !!!
     </h2>



      <p>

       <h2><strong><%= link_to 'Start_Loading', new_party_path, :type => "button", :class => "btn btn-primary", :style => "font-family: 'Montserrat', cursive; font-size: 16px; color: #00193a;" %></strong></h2>

       </p>

       <p>


 <a href="" data-toggle="modal" data-target="#index_notifications_modal" style="font-family: 'Annie Use Your Telescope', cursive; font-size: 14px; color: black; font-weight: bold;" title="Occassion | Invitations ..." ><span class="badge bg-important"><%= "#{@profile.user.notifications.count}" %></span><i class="fa fa-bell fa-3x " aria-hidden="true" style="color: #00193a;" ></i></a>

      <div class="modal fade" id="index_notifications_modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">    

 

          <div class="modal-dialog">  

                   <div class="modal-content">

                        <div class="modal-header" >

                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                 

                             <h4 class="modal-title" id="myModalLabel" style="font-family: 'Montserrat', cursive; font-size: 16px; color: #00193a; font-weight: bold;">Invivitation Notifications</h4>
                                                          
                        </div>
                                                
                      <div class="modal-body" style="background-color: #e5f4f9; width: 100%; height: 100%; overflow: auto;">
                                                       
                         <%= render @profile.user.notifications, modal: true %> 



                                  <div class="modal-footer">

                                     <button type="button" class="btn btn-default" data-dismiss="modal" style="font-family: 'Montserrat', cursive; font-size: 16px; color: #00193a; font-weight: bold;">Close</button>

                              </div>
                                              
                         </div>

                  </div>
                              
            </div>
                          
      </div>
      </p>
            

     </div>


  
       
      

  </section>


