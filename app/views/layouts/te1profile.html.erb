            <% @profiles.each do |profile| %>

             <div class="col-xs-4 ">

              <%= image_tag(profile.image.url(:original), :weight => "50", :height => "45", :class => "img-rounded", :alt => "") %>
              
              
                <%= link_to("#{profile.name}", profile_path(profile), :style => "font-family: 'Julius Sans One', sans-serif; font-size: 16px; font-weight: bold; color: #00193a;") %><br />

                 <%= render 'friends/form', :profile => profile %>

