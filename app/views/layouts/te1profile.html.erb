        <li><%= link_to "" %></li>



      <li><%= link_to "Edit_Profile", edit_profile_path(@profile), :type => "button", :class => "btn btn-primary", :style => "font-family: 'Montserrat', sans-serif; font-size: 14px; color: #00193a; font-weight: bold;" %></li>

        
