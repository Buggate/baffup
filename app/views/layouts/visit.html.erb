<body>

<!-- Google Tag Manager (noscript) -->

<!-- End Google Tag Manager (noscript) -->

 <header id="header">
        
        <nav class="navbar navbar-inverse" role="banner">
        <div class="container-fluid">
              <div class="navbar-header">


                  <a class="navbar-brand" href="#"><img src="/b_logo1.png" width="150" height="130"></a>

                </div>
         
                <div class="collapse navbar-collapse navbar-right">
                    <ul class="nav navbar-nav">                    
                        <li class="active"><%= link_to 'mYCATLOG', profiles_path, :style => "font-family: 'Permanent Marker', cursive;"  %></li>
                        <li><a href=""></a></li>
                        <% if @visitor != @party.visitors.first  %> 
                        <li></li>
                        <li><a href=""></a></li>
                        <% else @visitor = @party.visitors.first %>
                        <li></li>
                        <% end %> 
                        <li><%= link_to 'ALBUMS', visitor_catalogues_register_path(:visitor_id => @visitor.id, :party_id => @visitor.party.id,  :title => @party.title), :style => "font-family: 'Permanent Marker', cursive;" %></li>                    
                    </ul>
                </div>
            </div><!--/.container-->
        </nav><!--/nav-->
    
    </header><!--/header-->


    <div id="baffsup-event" class="baffsup-bg" style="background-image:url(../visit_bkgd_1.jpg);">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center baffsup-heading animate-box">
         <p style="font-family: 'Sacramento', Arial, serif; font-size: 75px; color: white; font-weight: bold; margin-bottom: 10px; line-height: 1.5;"><%= @party.title %></p>

        </div>
      </div>
      <div class="row">
        <div class="display-t">
          <div class="display-tc">
            <div class="col-md-10 col-md-offset-1">
              <div class="col-md-6 col-sm-6 text-center">
                <div class="event-wrap animate-box">
                  <h3 style="font-family: 'Berkshire Swash', cursive; font-size: 20px; color: white; font-weight: bold;">Details</h3>
                  <div class="event-col">

  <a class="btn btn-default" href="#">
                    <i class="fa fa-clock-o" style="color: #edc604; "></i>&nbsp;Time</a><br />                   
                     <p style="font-family: 'Vollkorn SC', serif; font-size: 18px; color: white; font-weight: bold;"><%= @party.time.strftime("%I:%M%p") %></p>

                    </div>
                  <div class="event-col">
                  <a class="btn btn-default" href="#">
                    <i class="fa fa-calendar-check-o" style="color: #edc604; " ></i>&nbsp;Date</a><br />
                    <p style="font-family: 'Vollkorn SC', serif; font-size: 18px; color: white; font-weight: bold;"><%= @party.date.strftime("%B #{@party.date.day.ordinalize}, %Y") %></p>
                  </div>
                  <p style="font-family: 'Vollkorn SC', serif; font-size: 18px; color: white; font-weight: bold;"><%= @party.venue %></p>
                </div>
              </div>
              <div class="col-md-6 col-sm-6 text-center">
                <div class="event-wrap animate-box">
                  <h3 style="font-family: 'Berkshire Swash', cursive; font-size: 20px; color: white; font-weight: bold;">Tell Us If You Are Coming </h3>
                  <div class="event-col">
                  <a class="btn btn-default" href="#">
                    <i class="fa fa-clipboard" style="color: #36e002;" ></i>&nbsp;R S V P BY DATE</a>
                   <p style="font-family: 'Vollkorn SC', serif; font-size: 18px; color: white; font-weight: bold;"><%= localize(@party.rsvp_by, format: :long) %></strong></p>
                  </div><br /><br /><br />
                  
                  <p style="font-family: 'Vollkorn SC', serif; font-size: 18px; color: white; font-weight: bold;"><%= @party.message %></p>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-color-sky-light">
    
    <div class="content-md container">
                <!-- Masonry Grid -->
     <div class="masonry-grid">          
      
        <div class="masonry-grid-item col-xs-4 col-sm-4 col-md-4">
                        <!-- Work -->
            <div class="work">
            <br /><br />

              <a class="pull-left" href="#" style ="font-family: 'Montserrat', sans-serif; font-size: 16px; font-weight: bold; color: #915b05;">
             <%= image_tag(@visitor.user.profile.image.url(:original), :weight => "50", :height => "40") %>&nbsp;&nbsp;&nbsp;
             <%= @visitor.name %>
        </a><br /> <br /><br /><br />
                                  
              <% if @visitor != nil %>  

                <% if @visitor.reservation.present? %>
                 

                   <p style="font-family: 'Montserrat', serif; font-size: 18px; color: black; font-weight: bold;">You are welcome to this occasion</p>

                   <h1 style ="font-family: 'Julius Sans One', sans-serif; font-size: 18px; color: black; " aria-hidden="true">Your reservation information has been sent to <%= @party.visitors.first.name %></h1>

                   <i class="fa fa-check fa-3x" aria-hidden="true" style="color: green;"></i><br /><br />

                <% elsif @visitor != @party.visitors.first  %> 

                  <br /><br /><h1 style ="font-family: 'Vollkorn SC', serif; font-size: 22px; color: #e404f4; font-weight: bold; "  aria-hidden="true"> Reserve a space on this Occassion</h1> 

                  <%= render 'reservations/form' %><br />

               <% else @visitor = @party.visitors.first %> 

                  <br /><br /><%= link_to "Reservation List", party_path(@party), :type => "button", :class => "btn btn-default", :style => "font-family: 'Vollkorn SC', serif; font-size: 18px; color: black;" %>
              
               <% end %>

            <% end %> 

          </div>
    
         <!-- End Work -->
      </div>

       <div class="masonry-grid-item col-xs-8 col-sm-8 col-md-8">
                        <!-- Work -->
          <div class="work">
           <br /><br />
              <p align="center" style ="font-family: 'Vollkorn SC', serif; font-size: 20px; color: #00193a; font-weight: bold; " aria-hidden="true">Post all your relevant images for this occasion.</p>
                                <%= render 'albums/visit_form' %>

           </div>

        </div> 
           
                         
       </div>
                <!-- End Masonry Grid -->
     </div>
   </div>

<section >

  
  <div class="container">
   

  

        <%= render :partial => '/layouts/album' %>

    
 
   

  </div>



</section>


<section>
<div class="container">

    

   
      <%= render "comments/widget" %>

  

  </div>


  </section> 


