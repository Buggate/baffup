 <div class="login-wrap">
  <div class="login-html">
    
    <div class="login-form">

    <div class="lock"></div>
         
         
    <div class="login-options" style="font-family: 'Mogra',  cursive; font-size: 18px; color: red "><%= t('.sign_up', :default => "Sign Up") %></div>

     

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>



    <div class="group">
          <label for="user-name" class="label" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; ">NAME</label>

          <%= f.text_field :name, class: "input" %>
    </div><br />

    <div class="group">
          <label for="user-email" class="label" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px; ">Email</label>
        
           <%= f.email_field :email, :value => @email, class: "input", :placeholder => "Email" %>
    </div><br />

    <div class="group">
          <label for="user-password" class="label" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px;">Password</label>

          <%= f.password_field :password, class: "input" %>
          
    </div><br />

        <div class="group">
          <label for="user-password_confirmation" class="label" style="font-family: 'Julius Sans One', sans-serif; font-size: 16px;">Confirm Password</label>

          <%= f.password_field :password_confirmation, class: "input" %>
          
        </div><br />



        <div class="group" style="font-family: 'Julius Sans One', sans-serif; font-size: 14px; color: black;" >
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "button" %>
          
          
        </div>

    <% end %>

    </div><br /><br />

       <div align="center" style="font-size: 28px; " ><%= link_to "Already have an account? SIGN IN! ", new_user_session_path %></div><br /><br />

  </div>

 </div>



 