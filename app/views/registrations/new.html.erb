 <div class="login-wrap">
  <div class="login-html">
    
    <div class="login-form">

    <div class="lock"></div>
         
         
    <div class="login-options" style="font-family: 'Handlee', serif; font-size: 38px; font-weight: bold; color: red "><%= t('.sign_up', :default => "Sign up") %></div>

     

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>



    <div class="group">
          <label for="user-name" class="label" style="font-size: 18px;">NAME</label>

          <%= f.text_field :name, class: "input" %>
    </div><br />

    <div class="group">
          <label for="user-email" class="label" style="font-size: 18px;">Email</label>
        
           <%= f.email_field :email, :value => @email, class: "input", :placeholder => "Email" %>
    </div><br />

    <div class="group">
          <label for="user-password" class="label" style="font-size: 18px;">Password</label>

          <%= f.password_field :password, class: "input" %>
          
    </div><br />

        <div class="group">
          <label for="user-password_confirmation" class="label" style="font-size: 18px;">Confirm Password</label>

          <%= f.password_field :password_confirmation, class: "input" %>
          
        </div><br />



        <div class="group" style="font-family: 'Handlee', serif; font-size: 18px;" >
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "button" %>
          
          
        </div>

    <% end %>

    </div>

  </div>

 </div>

 