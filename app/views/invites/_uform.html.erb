
<% modal ||= false %>
   <% remote = modal ? true : false %>

<%= simple_form_for([@party, @invite, @party.invites.build({:party_id => @party.id, :host_id => @party.user_id })], remote: remote, html: {role: :form, 'data-model' => 'invite'}) do |f| %>
 
   

   <%= f.hidden_field(:party_id, :value => @party.id) %>

   
   <%= f.hidden_field(:host_id, :value => @party.user_id) %>

<% @friends = current_user.friends.all %>

  <% @friends.each do |friend| %>



 <%= check_box_tag "invite[email][]", friend.email, (checked = true if current_user.friends.include?(friend.email)), :email => friend.email %>


     <%= label_tag "invite[email][][#{friend.email}]", friend.name %>


     <% end %>


   <%= f.submit 'Invite a Guest' %>
    

<% end %>

