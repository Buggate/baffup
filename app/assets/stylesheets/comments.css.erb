.comments-widget {
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 1em;
  padding: 1em;
  box-shadow: 0 10px 6px -6px #777;
}

h2.comments-header {
  color: #f7937c !important;
  margin-bottom: 0.3em !important;
}

ul.comments-list {
  padding-left: 1.3em;
}
ul.comments-list ul {
  padding-left: 1.3em;
}

li.comment {
  margin-bottom: .5em !important;
  margin-bottom: 1.3em;
}
li.comment:last-child {
  margin-bottom: 0;
}
li.comment .comment-info {
  color: #bbb;
  margin-bottom: .5em;
}
li.comment .comment-info a {
  color: #bbb;
}
li.comment ul.replies_for_comment {
  margin-top: 1em;
}

.comment-form {
  margin-top: 1em;
  margin-bottom: .5em;
}

